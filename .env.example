# Root .env.example â€“ copy to .env and fill in values before running docker compose

# DeltaDatabase admin key (must match ADMIN_KEY in the container)
DELTA_DB_ADMIN_KEY=changeme

# Database namespace
DELTA_DB_DATABASE=deltachat

# AI providers (at least one required)
OPENAI_API_KEY=sk-...
GEMINI_API_KEY=AIza...

# Ollama (if running locally)
OLLAMA_BASE_URL=http://host.docker.internal:11434

# Webhook HMAC signing secret
WEBHOOK_SECRET=change-me-in-production

# Allowed CORS origins for the backend
CORS_ORIGINS=http://localhost:80,http://localhost:5173

# MCP server (optional)
MCP_SERVER_URL=
