# Server
PORT=3000
NODE_ENV=development

# DeltaDatabase
# When DELTA_DB_URL is set, the adapter will communicate with the Python bridge service.
# Leave unset to use the FileSystemFallback (JSON files under ./data/).
DELTA_DB_URL=
DELTA_DB_DATA_DIR=./data

# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_DEFAULT_MODEL=gpt-4o

# Google Gemini
GEMINI_API_KEY=AIza...
GEMINI_DEFAULT_MODEL=gemini-pro

# Ollama (local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama3

# ChromaDB
CHROMA_URL=http://localhost:8000
CHROMA_DEFAULT_COLLECTION=deltachat

# Apache Tika
TIKA_URL=http://localhost:9998

# Docling
DOCLING_URL=http://localhost:5001

# Binary Storage
BINARY_STORAGE_PATH=./data/binaries

# MCP
MCP_SERVER_URL=

# Webhook secret (for verifying incoming webhooks)
WEBHOOK_SECRET=change-me-in-production

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
