# Server
PORT=3000
NODE_ENV=development

# ── DeltaDatabase ────────────────────────────────────────────────────────────
# Run DeltaDatabase with Docker:
#   docker run -d -p 8080:8080 -e ADMIN_KEY=changeme -v delta_data:/shared/db \
#     donti/deltadatabase:latest-aio
#
# DELTA_DB_URL is REQUIRED – the app will refuse to start without it.
DELTA_DB_URL=http://127.0.0.1:8080
DELTA_DB_ADMIN_KEY=changeme
DELTA_DB_DATABASE=deltachat

# ── OpenAI ────────────────────────────────────────────────────────────────────
OPENAI_API_KEY=sk-...
OPENAI_DEFAULT_MODEL=gpt-4o

# ── Google Gemini ─────────────────────────────────────────────────────────────
GEMINI_API_KEY=AIza...
GEMINI_DEFAULT_MODEL=gemini-pro

# ── Ollama (local) ────────────────────────────────────────────────────────────
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama3

# ── ChromaDB (vector store) ───────────────────────────────────────────────────
CHROMA_URL=http://localhost:8000
CHROMA_DEFAULT_COLLECTION=deltachat

# ── Apache Tika (binary processor) ───────────────────────────────────────────
TIKA_URL=http://localhost:9998

# ── Docling (binary processor) ───────────────────────────────────────────────
DOCLING_URL=http://localhost:5001

# ── Binary Storage ────────────────────────────────────────────────────────────
BINARY_STORAGE_PATH=./data/binaries

# ── MCP (Model Context Protocol) ─────────────────────────────────────────────
MCP_SERVER_URL=

# ── Webhook secret (HMAC-SHA256 signing) ─────────────────────────────────────
WEBHOOK_SECRET=change-me-in-production

# ── CORS (comma-separated allowed origins) ───────────────────────────────────
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
